{
  "manifest_version": 3,
  "name": "TwinkleTouch - 화면 장식 효과",
  "version": "1.0.0",
  "description": "웹페이지에 아름다운 반짝이는 장식 효과를 추가하는 크롬 익스텐션",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TwinkleTouch 설정"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["styles.css"],
    "matches": ["http://*/*", "https://*/*"]
  }]
} 