{
  "manifest_version": 3,
  "name": "TwinkleTouch - Screen Decoration Effects",
  "version": "1.0.2",
  "description": "A Chrome extension that adds beautiful twinkling decoration effects to webpages",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TwinkleTouch 설정"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}