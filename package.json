{
  "name": "twinkletouch-chromeextension",
  "version": "1.0.3",
  "description": "화면에 마우스 추적 및 클릭 효과로 반짝이는 별들을 표시하는 크롬 익스텐션입니다.",
  "main": "content.js",
  "scripts": {
    "dev": "node scripts/hot-reload.js",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "report": "playwright show-report",
    "lint": "eslint content.js tests/**/*.js",
    "lint:fix": "eslint content.js tests/**/*.js --fix",
    "quality-check": "npm run lint && npm run test",
    "build": "node scripts/package-extension.js",
    "version-patch": "npm version patch && git push --follow-tags",
    "validate-manifest": "node scripts/validate-manifest.js",
    "check-webstore-setup": "node scripts/check-webstore-setup.js"
  },
  "keywords": [
    "chrome-extension",
    "sparkle",
    "effects",
    "canvas",
    "webgl",
    "animation",
    "particle-effects",
    "magical",
    "twinkle"
  ],
  "author": "TwinkleTouch Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.3",
    "eslint": "^8.57.0",
    "open": "^10.2.0",
    "playwright": "^1.53.2",
    "postcss": "^8.5.6",
    "shadcn-ui": "^0.9.5",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^7.0.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/USERNAME/TwinkleTouch-ChromeExtension.git"
  },
  "bugs": {
    "url": "https://github.com/USERNAME/TwinkleTouch-ChromeExtension/issues"
  },
  "homepage": "https://github.com/USERNAME/TwinkleTouch-ChromeExtension#readme",
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
